<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscolheDificuldadeAIActivity"

    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center"
    ><!-- center components -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha da Inteligência"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nível da AI:"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup1"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/radioButton_DumbAI1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dumb AI"
            android:checked="true"/>
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/radioButton_SmartAI1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart AI"
            android:checked="false"/>
    </RadioGroup>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nível da AI:"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup2"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/radioButton_DumbAI2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dumb AI"
            android:checked="true"/>
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/radioButton_SmartAI2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart AI"
            android:checked="false"/>
    </RadioGroup>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnStartMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Match!"
        android:layout_gravity="center"
        />

</LinearLayout>